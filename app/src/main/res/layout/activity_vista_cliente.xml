<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.VistaClienteActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_row="10"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:columnCount="2"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="right|center_horizontal"
            android:padding="12dp"
            android:text="Informacion Cliente"
            android:textColor="#6A6666"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"

            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="right|center_horizontal"
            android:padding="12dp"
            android:text="Codigo Cliente : "
            android:textColor="#6A6666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNombre"

            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|left"
            android:hint="nombre"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2
"

            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="right|center_horizontal"
            android:padding="12dp"
            android:text="Nombre : "
            android:textColor="#6A6666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCodigo"

            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|left"
            android:hint="codigo"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"

            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="right|center_horizontal"
            android:padding="12dp"
            android:text="Apellido : "
            android:textColor="#6A6666"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView4"

            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="right|center_horizontal"
            android:padding="12dp"
            android:text="Telefono : "
            android:textColor="#6A6666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5
"

            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="right|center_horizontal"
            android:padding="12dp"
            android:text="Direcion  : "
            android:textColor="#6A6666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"

            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="right|center_horizontal"
            android:padding="12dp"
            android:text="Correo : "
            android:textColor="#6A6666"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewApellido"

            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|left"
            android:hint="apellido"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCorreo"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|left"
            android:hint="correo"
            android:padding="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/buttonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="16dp"
            android:text="Home"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textViewDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|left"
            android:hint="direccion"
            android:padding="12dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="1"

            android:layout_gravity="center_horizontal|left"
            android:hint="telefono"
            android:padding="12dp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="16dp"
            android:text="Back"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="155dp"
            android:layout_height="94dp"
            android:layout_row="1"
            android:layout_column="0"
            android:visibility="visible"
            app:srcCompat="@drawable/images"
            tools:srcCompat="@drawable/images" />


    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>